@{
    Page.Title = "用户注册";
    Layout = "~/_LayoutMain.cshtml";
}

<h2 class="text-center">用户注册</h2>
<div class="row">
    <div class="col-xs-hidden col-sm-3"></div>
    <div class="col-xs-12 col-sm-6">
        <form action="~/User/Reg" method="post">
            <div class="form-group">
                <div class="input-group">
                    <label class="input-group-addon">
                        用户名
                    </label>
                    <input type="text" name="User.Username" class="form-control" />
                </div>
            </div>

            <div class="form-group">
                <div class="input-group">
                    <label class="input-group-addon">
                        密码
                    </label>
                    <input type="password" name="User.Password" class="form-control" />
                </div>
            </div>

            <div class="form-group">
                <div class="input-group">
                    <label class="input-group-addon">
                        昵称
                    </label>
                    <input type="text" name="User.Nickname" class="form-control" />
                </div>
            </div>

            <div class="text-center">
                <input type="submit" value="注册" class="btn btn-primary" />
                <input type="reset" value="重填" class="btn btn-primary" />
                <a href="~/Default" class="btn btn-primary">返回首页</a>
            </div>

            <div class="text-center text-danger">
                @Model.Message
            </div>
        </form>
    </div>
    <div class="col-xs-hidden col-sm-3"></div>
</div>
