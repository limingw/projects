@{
    Page.Title = "员工查询";
    Layout = "~/_LayoutMain.cshtml";
}

<div class="tabpanel">
    <ul class="nav nav-tabs" role="tablist">
        <li role="presentation"><a href="#entity" role="tab" data-toggle="tab">实体查询</a></li>
        <li role="presentation"><a href="#dic" role="tab" data-toggle="tab">字典查询</a></li>
        <li role="presentation"><a href="#base" role="tab" data-toggle="tab">分页基础查询</a></li>
        <li role="presentation" class="active"><a href="#page" role="tab" data-toggle="tab">分页效果查询</a></li>
    </ul>
    <div class="tab-content">
        <div id="entity" role="tabpanel" class="tab-pane">
            <table class="table table-hover">
                <thead>
                    <tr>
                        <th>员工姓名</th>
                        <th>性别</th>
                        <th>工资</th>
                        <th>所属部门</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var emp in @Model.EmpDeptList)
                    {
                        <tr>
                            <td>@emp.Ename</td>
                            <td>@emp.Sex</td>
                            <td>@emp.Salary</td>
                            <td>@emp.DeptName</td>
                        </tr>
                    }
                </tbody>
            </table>

        </div>
        <div id="dic" role="tabpanel" class="tab-pane">
            <table class="table table-hover">
                <thead>
                    <tr>
                        <th>员工姓名</th>
                        <th>性别</th>
                        <th>工资</th>
                        <th>所属部门</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var emp in @Model.DicList)
                    {
                        <tr>
                            <td>@emp["ename"]</td>
                            <td>@emp["sex"]</td>
                            <td>@emp["salary"]</td>
                            <td>@emp["deptname"]</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
        <div id="base" role="tabpanel" class="tab-pane">
            <table class="table table-hover">
                <thead>
                    <tr>
                        <th>员工姓名</th>
                        <th>性别</th>
                        <th>工资</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var emp in @Model.PageBase)
                    {
                        <tr>
                            <td>@emp["ename"]</td>
                            <td>@emp["sex"]</td>
                            <td>@emp["salary"]</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
        <div id="page" role="tabpanel" class="tab-pane active">
            <form method="post" action="~/Employee/Page">
                <table class="table table-hover">
                <thead>
                    <tr>
                        <th>员工姓名</th>
                        <th>性别</th>
                        <th>工资</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var emp in @Model.PageList)
                    {
                        <tr>
                            <td>@emp["ename"]</td>
                            <td>@emp["sex"]</td>
                            <td>@emp["salary"]</td>
                        </tr>
                    }
                </tbody>
            </table>
                <div class="text-right">
                    转到<input type="text" name="Page" value="@Model.Page" />页<input type="submit" value="GO" class="btn btn-info" />
                </div>
            </form>
        </div>
    </div>
</div>

