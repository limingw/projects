@{
    Layout = "~/_LayoutMain.cshtml";
    Page.Title = "MVC表单提交";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-xs-4">
        </div>
        <div class="col-xs-4">
            <form class="form" method="post" action="~/Form/Login">
                <div class="form-group">
                    <input type="text" name="UserName" class="form-control" placeholder="请输入用户名..." value="@Model.UserName"/>
                </div>
                <div class="form-group">
                    <input type="password" name="Password" class="form-control" placeholder="请输入密码..." value="@Model.Password"/>
                </div>
                <div class="text-center">
                    <input type="submit" class="btn btn-info" value="登陆"/>
                </div>
                <div class="text-danger text-center">
                    @foreach (var item in Model.Types)
                    {
                        @item.Tid  @item.TypeName<br />;
                    }
                    @Model.Error</div>
            </form>
        </div>
        <div class="col-xs-4">
        </div>
    </div>
</div>
